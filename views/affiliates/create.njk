{% extends 'layout.njk' %}

{% block styles %}
    <link rel="stylesheet" href="styles/main.css">
    <link rel="stylesheet" href="styles/index.css">
{% endblock styles %}

{% block content %}
    <main class="card">
        <section class="info">
            <h3>Classroom manager</h3>
            <div class="tittle">
                <h1>Get started</h1>
                <span>Already have an account?
                    <a href="#">Sign in</a>
                </span>
            </div>

            <div class="item">
                <div>Your name</div>
                <div><input type="text" name="name"></div>
            </div>
            <div class="item">
                <div>Birth date</div>
                <div><input type="date" name="birth"></div>
            </div>
            <div class="item">
                <div>Formation degree</div>
                <div>
                    <select name="education">
                        <option value="high-school">High school</option>
                        <option value="college-degree">College degree</option>
                        <option value="master-degree">Masters degree</option>
                        <option value="phd-degree">PHD degree</option>
                    </select>
                </div>
            </div>
            <div class="item">
                <div>Education</div>

                <input type="radio" name="distance">
                <label for="distance">Distance learning</label>
                <input type="radio" name="presence">
                <label for="presence">Traditional classes</label>
            </div>
            <div class="item">
                <div>Field of work</div>
                <div><input type="text" name="work"></div>
            </div>

            <button type="submit">Send</button>
        </section>

        <section class="image"></section>
    </main>
{% endblock content %}