{% extends 'layout.njk' %}

{% block styles %}
    <link rel="stylesheet" href="/styles/index.css">
{% endblock styles %}

{% block content %}
    <div class="card table-container">
        <a href="/teachers/create" class="button">NEW TEACHER</a>
        <table >
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Work</th>
                    <th>Info</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ teacher.image_Url}})"></span>
                            {{teacher.name}}
                        </td>
                        <td>
                            {% for work in teacher.work %}
                                {{ work }}
                            {% endfor %}
                        </td>

                        <td>
                            <a href="/teachers/{{ teacher.id }}" class="button">Info</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock content %}