<div class="item">
    <div>Image profile</div>
    <div><input type="text" name="image_Url" value="{{ student.image_Url }}" placeholder="http://"></div>
</div>
<div class="item">
    <div>Your name</div>
    <div><input type="text" name="name" value="{{ student.name }}"></div>
</div>
<div class="item">
    <div>Birth date</div>
    <div><input type="date" name="birth" value="{{ student.birth }}"></div>
</div>
<div class="item">
    <div>Email</div>
    <div><input type="email" name="email" value="{{ student.email }}"></div>
</div>
<div class="item">
    <div>Education level</div>
    <div>
        <select name="education">
            <option value="1" {% if student.education == 1 %} selected="selected" {% endif %}>Fifth grade</option>
            <option value="2" {% if student.education == 2 %} selected="selected" {% endif %}>Third grade</option>
            <option value="3" {% if student.education == 3 %} selected="selected" {% endif %}>Ninth grade</option>
            <option value="4" {% if student.education == 4 %} selected="selected" {% endif %}>Sophomore</option>
        </select>
    </div>
</div>
<div class="item">
    <div>Course credit</div>
    <div><input type="number" name="credit" value="{{ student.credit }}"></div>
</div>

<button type="submit">Save</button>