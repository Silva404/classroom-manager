{% extends 'layout.njk' %}

{% block styles %}
    <link rel="stylesheet" href="/styles/index.css">
{% endblock styles %}

{% block title %}
    <title>Teacher info</title>
{% endblock title %}

{% block content %}
    <form class="card" method="post" action="/students">
        <section class="info">
            <div class="tittle">
                <h1>Student info</h1>
                <span>Already have an account?
                    <a href="#">Sign in</a>
                </span>
            </div>

            <div class="item">
                <div>Your name</div>
                <div>{{ student.name }}</div>
            </div>
            <div class="item">
                <div>Age</div>
                <div>{{ student.birth_date }}</div>
            </div>
             <div class="item">
                <div>Email</div>
                <div>{{ student.email }}</div>
            </div>
            <div class="item">
                <div>Education level</div>
                <div>
                    {% if student.education_level == 1 %}
                        Fifth grade
                    {% endif %}
                    {% if student.education_level == 2 %}
                        Third grade
                    {% endif %}
                    {% if student.education_level == 3 %}
                        Nith grade
                    {% endif %}
                    {% if student.education_level == 4 %}
                        Sophomore
                    {% endif %}
                </div>
            </div>
            <div class="item">
                <div>Course credits</div>
                <div>{{ student.course_credit}}  </div>
            </div>
            <div class="item">
                <div>Member Since</div>
                <div>{{ student.created_at }}</div>
            </div>
            <div class="item">
                <div>Teacher</div>
                <div>{{ student.teacher_name }}</div>
            </div>
            <a href="/students/{{ student.id }}/edit" class="button up">Edit</a>
        </section>

        <section class="image" style="background-image: url({{ student.avatar_url }}"></section>
    </form>
{% endblock content %}